{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Annual Water Charges vs Precipitation",
  "width": 1100,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/KobeN86/Assignment_2/refs/heads/main/data/water_again.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "layer": [
        {
          "mark": {"type": "area", "opacity": 0.3},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Water Charges", "type": "quantitative", "axis": {"title": "Water Charges ($/ML)", "titleColor": "#ff0000"}},
            "color": {"value": "#ff0000", "legend": {"title": "Series", "values": ["Water Charges"]}}
          }
        },
        {
          "mark": {"type": "line", "point": true},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Water Charges", "type": "quantitative"},
            "color": {"value": "#ff0000", "legend": null},
            "tooltip": [
              {"field": "Year", "type": "temporal"},
              {"field": "Water Charges", "type": "quantitative"}
            ]
          }
        }
      ]
    },
    {
      "layer": [
        {
          "mark": {"type": "area", "opacity": 0.3},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Percipitation", "type": "quantitative", "axis": {"title": "Precipitation (mm)", "titleColor": "#6699ff"}},
            "color": {"value": "#6699ff", "legend": {"title": "Series", "values": ["Precipitation"]}}
          }
        },
        {
          "mark": {"type": "line", "point": true},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Percipitation", "type": "quantitative"},
            "color": {"value": "#6699ff", "legend": null},
            "tooltip": [
              {"field": "Year", "type": "temporal"},
              {"field": "Percipitation", "type": "quantitative"}
            ]
          }
        }
      ]
    }
  ],
  "resolve": {"scale": {"y": "independent"}},
  "config": {
    "axis": {"labelFontSize": 14, "titleFontSize": 16},
    "title": {"fontSize": 22},
    "legend": {"labelFontSize": 14, "titleFontSize": 16}
  }
}
