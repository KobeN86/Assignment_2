{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Wheat Precipitation vs Water Charges (1980â€“2024)",
  "width": 1100,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/KobeN86/3179_Assignment_2/refs/heads/main/Assignment2/data/water_again.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "layer": [
        {
          "mark": {"type": "area", "opacity": 0.5, "color": "#ff0000"},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {
              "field": "Water Charges",
              "type": "quantitative",
              "axis": {
                "title": "Water Charges ($/ML)",
                "titleColor": "#000000",
                "format": ".0f"
              }
            }
          }
        },
        {
          "mark": {"type": "line", "point": true, "color": "#000000"},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Water Charges", "type": "quantitative"},
            "tooltip": [
              {"field": "Year", "type": "temporal"},
              {"field": "Water Charges", "type": "quantitative"}
            ]
          }
        }
      ]
    },
    {
      "layer": [
        {
          "mark": {"type": "area", "opacity": 0.5, "color": "#6699ff"},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {
              "field": "Percipitation",
              "type": "quantitative",
              "axis": {
                "orient": "right",
                "title": "Wheat Precipitation (mm)",
                "titleColor": "#000000",
                "format": ".0f"
              },
              "scale": {"zero": true}
            }
          }
        },
        {
          "mark": {"type": "line", "point": true, "color": "#000000"},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Percipitation", "type": "quantitative"},
            "tooltip": [
              {"field": "Year", "type": "temporal"},
              {"field": "Percipitation", "type": "quantitative"}
            ]
          }
        }
      ]
    }
  ],
  "resolve": {"scale": {"y": "independent"}},
  "config": {
    "axis": {"labelFontSize": 14, "titleFontSize": 16},
    "title": {"fontSize": 22}
  }
}
