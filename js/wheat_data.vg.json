{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Wheat Yield (1980â€“2024)",
  "width": 1100,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/KobeN86/3179_Assignment_2/refs/heads/main/Assignment2/data/Wheat_production.csv",
